<div>
    <h1>Administrar Usuarios</h1>

    <table border="1">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
            
            

        </tr>
    </thead>
        <tbody>
        {{#each userList }}
        <tr>
            <td>{{this.first_name}} {{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
           
            <td> 
                <form action="/api/users/delete/{{this._id}}" method="POST">
                    <button type="submit">Eliminar Usuario</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>




</div>