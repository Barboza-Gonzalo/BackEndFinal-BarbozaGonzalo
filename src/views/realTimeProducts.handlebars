<div >
    <form action="" id="formul">
        <input type="text" id="title" placeholder="Nombre del producto">
        <input type="text" id="description" placeholder="Descripción del producto">
        <input type="number" id="price" placeholder="Precio">
        <input type="url" id="thumbnail" placeholder="Ruta de la imagen">
        <input type="text" id="code" placeholder="Código del producto">
        <input type="number" id="stock" placeholder="Stock">    
        <input type="text" id="category" placeholder="Categoría">
        <button id="btn-send">Enviar</button>
    </form>
</div>
<div>
    <form action="" id="formul">
        <input type="number" id="id" placeholder="ingrese ID del producti a eliminar">
        <button id="btn-del">Eliminar</button>
    </form>
    
</div>

    
   <h1>Listado de Productos</h1>
<div id="product-list">
    {{#each products}}
    <div>
        <h2>{{this.title}} - {{this.description}}</h2>
        <img src="{{this.thumbnail}}" width="100" height="100" alt="">
        <p>${{this.price}}- - -ID:{{this.id}}</p>
    </div>
    {{/each}}
</div>

   
